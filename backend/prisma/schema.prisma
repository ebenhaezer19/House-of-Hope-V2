generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  password        String
  name            String
  role            Role      @default(USER)
  resetToken      String?
  resetTokenExpiry DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Room {
  id          Int        @id @default(autoincrement())
  number      String     @unique
  type        RoomType
  capacity    Int
  floor       Int
  description String?
  residents   Resident[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum RoomType {
  WARD
}

model Resident {
  id          Int      @id @default(autoincrement())
  name        String
  nik         String   @unique
  birthPlace  String
  birthDate   String?
  gender      Gender
  address     String
  phone       String?
  education   Education
  schoolName  String
  grade       String?
  major       String?
  assistance  AssistanceType
  details     String?
  room        Room     @relation(fields: [roomId], references: [id])
  roomId      Int
  documents   Document[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  status      ResidentStatus
  exitDate    DateTime?
  alumniNotes String?
  payments    Payment[]
  bookings    Booking[]
}

model Document {
  id          Int      @id @default(autoincrement())
  name        String
  path        String
  type        String
  resident    Resident @relation(fields: [residentId], references: [id])
  residentId  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Gender {
  MALE
  FEMALE
}

enum Education {
  TK
  SD
  SMP
  SMA
  KULIAH
  MAGANG
}

enum AssistanceType {
  YAYASAN
  DIAKONIA
}

enum ResidentStatus {
  NEW
  ACTIVE
  ALUMNI
}

model Payment {
  id         Int      @id @default(autoincrement())
  resident   Resident @relation(fields: [residentId], references: [id])
  residentId Int
  amount     Float
  type       String   // MONTHLY, DEPOSIT, OTHER
  status     String   // PAID, PENDING, UNPAID
  notes      String?
  date       DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("payments")
}

// Tambahkan model Facility
model Facility {
  id          Int       @id @default(autoincrement())
  name        String
  type        String    
  capacity    Int
  status      String    
  image       String?   
  description String?
  location    String?   
  maintenanceSchedule String?
  bookings    Booking[]
  maintenanceLogs MaintenanceLog[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("facilities")
}

model Booking {
  id          Int       @id @default(autoincrement())
  facility    Facility  @relation(fields: [facilityId], references: [id])
  facilityId  Int
  resident    Resident  @relation(fields: [residentId], references: [id])
  residentId  Int
  startTime   DateTime
  endTime     DateTime
  purpose     String
  status      String    // pending, approved, rejected
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("bookings")
}

model MaintenanceLog {
  id          Int       @id @default(autoincrement())
  facility    Facility  @relation(fields: [facilityId], references: [id])
  facilityId  Int
  type        String    // routine, repair, etc
  description String
  status      String    // pending, in_progress, completed
  startDate   DateTime
  endDate     DateTime?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("maintenance_logs")
}

